<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/itats"
            android:layout_width="wrap_content"
            android:layout_height="80dp"></ImageView>

        <TextView
            android:textAlignment="center"
            android:text="Silahkan login untuk melanjutkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"></TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_weight="1"
        android:background="@drawable/bg_gradasi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#ffff"
            android:text="Masuk"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"></RelativeLayout>

        <EditText
            android:id="@+id/username"
            android:paddingLeft="10dp"
            android:background="@drawable/form"
            android:hint=" Masukkan Username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_person_24px"></EditText>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"></RelativeLayout>

        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:background="@drawable/form"
            android:drawableLeft="@drawable/ic_vpn_key_24px"
            android:hint=" Masukkan Passwoord"
            android:layout_width="match_parent"
            android:layout_height="50dp"></EditText>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"></RelativeLayout>
        <TextView
            android:paddingLeft="15dp"
            android:textColor="#FFFF"
            android:text="Lupa Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <Button
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_login_24px"
            android:id="@+id/btnLogin"
            android:textColor="#384EF3"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Login"
            android:layout_width="120dp"
            android:layout_height="wrap_content"></Button>

        <TextView
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:textColor="#FFFF"
            android:text="Belum Punya Akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:textColor="#FFFF"
            android:text="Daftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>







    </LinearLayout>

</LinearLayout>